{
  "name": "Voting",
  "description": "Simple voting with start and end flows",
  "type": "state-machine",
  "definition": "definition.json",
  "initialData": "initial-data.json",
  "events": [
    { "name": "startVoting", "file": "event-start-voting.ts", "from": "pending", "to": "voting" },
    { "name": "endVoting", "file": "event-end-voting.ts", "from": "voting", "to": "completed" }
  ],
  "testFlows": [
    {
      "name": "Happy path - complete voting",
      "steps": [
        { "action": "create", "definition": "definition.json", "initialData": "initial-data.json" },
        { "action": "processEvent", "event": "event-start-voting.ts", "expectedState": "voting" },
        { "action": "processEvent", "event": "event-end-voting.ts", "expectedState": "completed" }
      ]
    }
  ]
}
